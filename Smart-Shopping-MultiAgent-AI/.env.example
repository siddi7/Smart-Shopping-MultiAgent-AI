# Smart Shopping Multi-Agent AI System Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./smart_shopping.db

# AI/ML Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
HUGGING_FACE_TOKEN=your_huggingface_token_here

# Security
SECRET_KEY=your-secret-key-change-in-production

# Feature Flags
ENABLE_FEDERATED_LEARNING=true
ENABLE_EXPLAINABLE_AI=true
ENABLE_MULTIMODAL_RECOMMENDATIONS=true
ENABLE_REAL_TIME_PERSONALIZATION=true

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379/0

# Optional: Monitoring
WANDB_PROJECT=smart-shopping-multiagent

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit the .env file to version control
# 4. Keep your tokens secure and private